<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.TrainingFragment"
             android:id="@+id/fragment_training">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/training_choice"
                android:text="@string/training_choice"
                android:textAppearance="@android:style/TextAppearance.Material.Display1"
                android:textSize="24sp"
                android:paddingTop="20dp"
                android:textAlignment="center"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="200dp">
            <ImageView
                    android:src="@drawable/ic_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/trainingA_image"
                    android:layout_weight="1"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                <RadioGroup
                        android:id="@+id/traniningA_button_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/trainingA_button"
                            android:text="@string/phone_driven_training_button"/>
                </RadioGroup>
                <TextView
                        android:text="@string/phone_driven_training_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4"
                        android:textAppearance="@android:style/TextAppearance.Material.Display1"
                        android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="200dp">
            <ImageView
                    android:src="@drawable/ic_user"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/trainingB_image"
                    android:layout_weight="1"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">
                <RadioGroup
                        android:id="@+id/traniningB_button_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/trainingB_button"
                            android:text="@string/user_driven_training_button"/>
                </RadioGroup>
                <TextView
                        android:text="@string/user_driven_training_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView5"
                        android:textAppearance="@android:style/TextAppearance.Material.Display1"
                        android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
        <Button
                android:text="@string/start_training"
                android:layout_width="128dp"
                android:background="@drawable/rounded_button"
                android:elevation="8dp"
                android:layout_height="30dp"
                android:id="@+id/start_training"/>
    </LinearLayout>

</FrameLayout>